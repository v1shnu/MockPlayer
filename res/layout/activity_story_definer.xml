<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.vishnu.mockplayer.utilities.CustomImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:id="@+id/imageView"/>
    <LinearLayout android:layout_height="55dp" android:layout_width="fill_parent" android:layout_alignParentBottom="true">
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/assign_task_button"
                android:id="@+id/assign_task_button"
                android:layout_weight="1"
                android:onClick="assignTaskToSelectedPortion"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:id="@+id/done_button"
                android:layout_weight="1"
                android:onClick="done"/>
    </LinearLayout>
</RelativeLayout>